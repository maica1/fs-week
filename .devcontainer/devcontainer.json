// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/javascript-node-postgres
{
	"name": "FS-week next.js postgres",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"features": {
		"ghcr.io/devcontainers-contrib/features/act:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-contrib/features/prisma:2": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-contrib/features/tmux-apt-get:1": {},
		"ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {
			"plugins": "ssh-agent npm",
			"omzPlugins": "https://github.com/zsh-users/zsh-autosuggestions",
			"username": "en_US.UTF-8 UTF-8"
		},
		"ghcr.io/eitsupi/devcontainer-features/jq-likes:2": {
			"jqVersion": "latest",
			"yqVersion": "latest",
			"gojqVersion": "latest",
			"xqVersion": "latest",
			"jaqVersion": "latest"
		},
		"ghcr.io/dhoeric/features/hadolint:1": {},
		"ghcr.io/stuartleeks/dev-container-features/shell-history:0": {},
		"ghcr.io/guiyomh/features/vim:0": {},
		"ghcr.io/lukewiwa/features/shellcheck:0": {
			"version": "stable"
		},
		"ghcr.io/r3dpoint/devcontainer-features/tailwindcss-standalone-cli:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-community/npm-features/typescript:1": {
			"version": "latest"
		},
		"ghcr.io/hspaans/devcontainer-features/ansible-lint:1": {
			"version": "latest"
		},
		"ghcr.io/nils-geistmann/devcontainers-features/zsh:0": {
			"theme": "robbyrussell",
			"plugins": "git docker",
			"desiredLocale": "en_US.UTF-8 UTF-8"
		},
		"ghcr.io/gvatsal60/dev-container-features/sonarlint:1": {},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"moby": true,
			"azureDnsAutoDetection": true,
			"version": "latest",
			"dockerDashComposeVersion": "latest"
		},
		"ghcr.io/gvatsal60/dev-container-features/pre-commit:1": {}
	}

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// This can be used to network with other containers or with the host.
	// "forwardPorts": [3000, 5432],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "yarn install",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
